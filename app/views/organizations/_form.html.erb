<%= form_with(model: organization) do |form| %>
<% if organization.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(organization.errors.count, "error") %> errors:</h2>

    <ul>
        <% organization.errors.each do |error| %>
        <li><%= error.full_message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
</div>

<div class="field">
    <%= form.label :hourly_rate %>
    <%= form.number_field :hourly_rate, step: 0.1 %>
</div>

<div class="actions">
    <%= form.submit %>
</div>
<% end %>