<body>
    <style>
        h1 {
            color: blue;
        }
    </style>
    <h1>Adnat</h1><br>

    <%if current_user.organization%>
    <p>Logged in as <%= current_user.name%></p>
    <%= render template: "organizations/show", organization: @organization = current_user.organization %>
